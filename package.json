{
  "name": "ordermanager",
  "version": "0.0.0",
  "description": "Customer Order Processing Service",
  "repository": "selva.onp/ordermanager",
  "author": {
    "name": "",
    "email": ""
  },
  "main": "es5/server.js",
  "engines": {
    "node": ">=4"
  },
  "bugs": {
    "url": "https://github.com/selva.onp/ordermanager/issues"
  },
  "homepage": "https://github.com/selva.onp/ordermanager#readme",
  "devDependencies": {
    "babel-cli": "^6.3.17",
    "babel-core": "^6.3.26",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-stage-1": "^6.13.0",
    "babel-register": "^6.3.13",
    "chai": "^3.5.0",
    "eslint": "^1.10.3",
    "eslint-config-airbnb": "^2.1.1",
    "isparta": "^4.0.0",
    "jscs": "^2.7.0",
    "mocha": "^2.3.4",
    "mocha-gherkin": "^0.1.15",
    "nodemon": "^1.8.1",
    "watch": "^0.17.1"
  },
  "dependencies": {
    "async": "^2.0.1",
    "bluebird": "^3.4.1",
    "good": "^6.4.0",
    "good-console": "^5.2.0",
    "hapi": "^11.1.4",
    "hapi-pkg": "^1.1.0",
    "hapi-swaggered": "^2.4.1",
    "hapi-swaggered-ui": "^2.1.1",
    "inert": "^3.2.0",
    "lodash": "^4.15.0",
    "mongoose": "^4.5.9",
    "vision": "^4.0.1"
  },
  "scripts": {
    "cov": "babel-node node_modules/.bin/isparta cover --report text --report html _mocha -- --reporter list",
    "lint": "eslint src && jscs src",
    "start": "node es5/server.js",
    "start:dev": "nodemon --exec babel-node src/server.js",
    "test": "mocha --compilers js:babel-register --reporter list",
    "testbdd": "mocha es5test/createorder.feature.js --ui mocha-gherkin --reporter mocha-gherkin/build/spec",
    "tdd": "watch 'clear && npm run -s test' src test",
    "tdd:lint": "watch 'clear && npm run -s lint && npm run -s test' src test",
    "build": "babel src --out-dir es5",
	"buildtest": "babel test --out-dir es5test"
  },
  "eslintConfig": {
    "extends": "airbnb/base",
    "env": {
      "mocha": true
    },
    "rules": {
      "comma-dangle": 0
    }
  },
  "jscsConfig": {
    "preset": "airbnb",
    "esnext": true,
    "requireCurlyBraces": null,
    "requireTrailingComma": null
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  }
}
